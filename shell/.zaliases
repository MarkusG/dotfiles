alias tcpdump='sudo tcpdump'

pb() {
	if [ -z "$1" ]; then	
		_pb_base
	else
		_pb_code "$1"
	fi
}

_pb_base() {
	curl -F c=@- 'https://ptpb.pw/?u=1'
}

_pb_code() {
	link=$(cat $1 | _pb_base)
	extension=$(echo $1 | grep -Eo '\.([a-zA-Z]*$)' | cut -c 2-)
	echo "${link}/${extension}"
}
