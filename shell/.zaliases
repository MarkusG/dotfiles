devenv() {
	if [[ -n "$1" ]]; then
		cd $1
	fi
	i3-msg append_layout ~/dotfiles/i3/dev-workspace.json
	for i in {0..3}; do
		termite & disown
	done
	exit
}

splay() {
	id=$(echo $1 | cut -d'/' -f 5 | cut -d'?' -f 1)
	uri="spotify:track:$id"
	playerctl -p spotify open "$uri"
}

scratch () {
    if [ -z "$1" ]
    then
        vim ~/.scratch
    else
        vim ~/.scratch.d/$1
    fi
}
