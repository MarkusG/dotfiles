#!/bin/bash
# upload the last taken screenshot to 0x0.st and copy the link to the clipboard

file=/tmp/screenshot.png
key=$(cat ~/nixnest_key.txt)
response=$(curl -X POST https://upload.nixne.st/image -H "Upload-Key: $key" -F "uploadFile=@$file")
echo $response | jq -r '.link' | xsel -b
notify-send -t 1000 'Screenshot uploaded.' -i '/usr/share/icons/Arc/apps/symbolic/applets-screenshooter-symbolic.svg'
