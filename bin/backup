#!/bin/bash

rsync -rv /hdd/media/ /run/media/mark/Mark-External/media/
restic -r /run/media/mark/Mark-External/restic-repo-finch \
	--exclude .cache \
	--exclude .cargo \
	--exclude .nuget \
	--exclude .wine \
	--exclude .dotnet \
	--exclude .docker \
	--exclude .lutris \
	--exclude .local/share/steam \
	--exclude /hdd/media \
	--verbose backup ~ /hdd
