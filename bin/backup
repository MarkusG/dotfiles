#!/bin/bash

rsync -rv /media/hdd/media /run/media/mark/Mark-External/media
restic -r /run/media/mark/Mark-External/restic-repo-finch \
	--exclude .cache \
	--exclude .cargo \
	--exclude .nuget \
	--exclude .wine \
	--exclude .dotnet \
	--exclude .docker \
	--exclude /media/hdd/steam-library \
	--exclude /media/hdd/games \
	--exclude /media/hdd/virtual-machines \
	--exclude /media/hdd/podcasts \
	--exclude /media/hdd/tv-and-movies \
	--verbose backup ~ /media/hdd
